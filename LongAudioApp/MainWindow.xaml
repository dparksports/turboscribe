<Window x:Class="LongAudioApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TurboScribe" Height="1365" Width="1000"
        Background="{StaticResource BgBrush}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="ðŸŽ™ï¸ TurboScribe" FontSize="22" FontWeight="Bold" 
                       Foreground="{StaticResource TextBrush}"/>
            <TextBlock Text="Scan media files for voice activity, then transcribe with Whisper Large-v3"
                       Foreground="{StaticResource TextDimBrush}" FontSize="12" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Tab Control -->
        <TabControl x:Name="MainTabControl" Grid.Row="1" Background="Transparent" BorderThickness="0"
                    Foreground="{StaticResource TextBrush}">



            <!-- ===== TRANSCRIBE TAB ===== -->
            <TabItem Header="ðŸ“ Transcribe">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Drive / Directory Picker -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Drive checkbox list -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="ðŸ“ Drives:" Foreground="{StaticResource TextDimBrush}" 
                                       FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ItemsControl x:Name="DriveList">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                            <Button x:Name="RefreshDrivesBtn" Content="ðŸ”„" Width="28" Height="24"
                                    Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                    Click="RefreshDrivesBtn_Click" ToolTip="Refresh drive list"
                                    FontSize="12" Padding="2"/>
                            <TextBlock Text="|" Foreground="{StaticResource BorderBrush}" 
                                       VerticalAlignment="Center" Margin="8,0" FontSize="14"/>
                            <Button x:Name="BrowseBtn" Content="ðŸ“‚ Custom Folder" 
                                    Style="{StaticResource AccentButton}"
                                    Click="BrowseBtn_Click" FontSize="11" Padding="8,2"
                                    ToolTip="Add a custom folder to scan"/>
                        </StackPanel>
                        
                        <!-- Hidden: stores the active directory path for compatibility -->
                        <TextBox x:Name="DirectoryBox" Grid.Row="1" Visibility="Collapsed"
                                 Text="C:\Users\k2\My Drive (dpark.sports@gmail.com)"/>
                    </Grid>

                    <!-- Transcribe Controls -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button x:Name="TranscribeAllBtn" Content="â–¶ Transcribe All Files" 
                                Style="{StaticResource AccentButton}"
                                Click="TranscribeAllBtn_Click"
                                ToolTip="Transcribe every media file in the directory"/>
                        <Button x:Name="CancelTranscribeBtn" Content="â¹ Cancel" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="CancelBtn_Click" IsEnabled="False"/>
                        <Button x:Name="RefreshTranscriptsBtn" Content="ðŸ”„ Refresh" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="RefreshTranscriptsBtn_Click"/>
                        <Button x:Name="ViewSilentBtn" Content="ðŸ”‡ View Silent Files" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="ViewSilentBtn_Click" IsEnabled="False"/>
                        <TextBlock x:Name="TranscribeCountLabel" VerticalAlignment="Center"
                                   Foreground="{StaticResource TextDimBrush}" FontSize="12"
                                   Margin="12,0,0,0" Text="Set directory and click Transcribe"/>
                    </StackPanel>

                    <!-- Progress -->
                    <Grid Grid.Row="2" Margin="0,0,0,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ProgressBar x:Name="TranscribeProgress" Grid.Row="0" Height="6" 
                                     Background="{StaticResource SurfaceBrush}" 
                                     Foreground="{StaticResource SuccessBrush}" 
                                     BorderThickness="0" Value="0"/>
                        <TextBlock x:Name="TranscribeStatusLabel" Grid.Row="1" 
                                   Foreground="{StaticResource TextDimBrush}" 
                                   FontSize="11" Margin="0,4,0,0" Text="Ready"/>
                    </Grid>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="420" MinWidth="200"/>
                            <ColumnDefinition Width="6"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Draggable splitter -->
                        <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch"
                                      Background="{StaticResource BorderBrush}" Cursor="SizeWE"/>

                        <!-- Left: Transcript file list -->
                        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" 
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Margin="8,6,8,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ðŸ“„ Transcript Files" 
                                               FontSize="12" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextBrush}" 
                                               VerticalAlignment="Center" Margin="2,0,0,0"/>
                                    <ComboBox x:Name="TranscriptSortCombo" Grid.Column="1" Width="90" FontSize="10"
                                              SelectedIndex="0" SelectionChanged="TranscriptSortCombo_Changed">
                                        <ComboBoxItem Content="Newest" Tag="date"/>
                                        <ComboBoxItem Content="Largest" Tag="size"/>
                                        <ComboBoxItem Content="Name" Tag="name"/>
                                    </ComboBox>
                                </Grid>
                                <!-- Filter Box -->
                                <Grid Grid.Row="1" Margin="8,2,8,4">
                                    <TextBox x:Name="TranscriptFilterBox"
                                             Background="#1A1A2A" 
                                             Foreground="{StaticResource TextBrush}"
                                             BorderBrush="{StaticResource BorderBrush}"
                                             FontSize="12" Padding="6,4"
                                             TextChanged="TranscriptFilterBox_TextChanged"
                                             ToolTip="Filter transcript files by name"/>
                                    <TextBlock x:Name="FilterPlaceholder" Text="ðŸ” Filter by filename..." FontSize="12" 
                                               Foreground="#555570" Padding="8,5" IsHitTestVisible="False"/>
                                </Grid>
                                <!-- Search Box -->
                                <Grid Grid.Row="2" Margin="8,0,8,4">
                                    <TextBox x:Name="SearchBox"
                                             Background="#1A1A2A" 
                                             Foreground="{StaticResource TextBrush}"
                                             BorderBrush="{StaticResource BorderBrush}"
                                             FontSize="12" Padding="6,4"
                                             KeyDown="SearchBox_KeyDown"
                                             TextChanged="SearchBox_TextChanged"
                                             ToolTip="Type and press Enter to search across all transcripts"/>
                                    <TextBlock x:Name="SearchPlaceholder" Text="ðŸ”Ž Search inside transcripts (Enter)..." FontSize="12" 
                                               Foreground="#555570" Padding="8,5" IsHitTestVisible="False"/>
                                </Grid>
                                <ListBox x:Name="TranscriptList" Grid.Row="3"
                                         Background="Transparent" BorderThickness="0"
                                         Foreground="{StaticResource TextBrush}"
                                         FontSize="11" Padding="4"
                                         SelectionChanged="TranscriptList_SelectionChanged">
                                    <ListBox.ContextMenu>
                                        <ContextMenu Background="#1E1E2E" Foreground="{StaticResource TextBrush}" BorderBrush="{StaticResource BorderBrush}">
                                            <MenuItem Header="ðŸ“ Summarize" Click="ContextSummarize_Click"/>
                                            <MenuItem Header="ðŸ“‹ Outline" Click="ContextOutline_Click"/>
                                            <Separator/>
                                            <MenuItem Header="ðŸ“Š Open in Analysis" Click="ContextOpenAnalysis_Click"/>
                                            <Separator/>
                                            <MenuItem Header="â–¶ Open Media File in Player" Click="ContextOpenMediaPlayer_Click"/>
                                            <MenuItem Header="ðŸ“‚ Reveal Media File in Explorer" Click="ContextRevealExplorer_Click"/>
                                        </ContextMenu>
                                    </ListBox.ContextMenu>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="2,4">
                                                <TextBlock Text="{Binding FileName}" 
                                                           Foreground="{StaticResource TextBrush}"
                                                           FontSize="12" TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding SizeLabel}" 
                                                               Foreground="#7C3AED"
                                                               FontSize="10" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding FolderPath}" 
                                                               Foreground="{StaticResource TextDimBrush}"
                                                               FontSize="10" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Padding" Value="6,2"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#3B3B52"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#333344"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </Grid>
                        </Border>

                        <!-- Right: Transcript content -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- File info + Open Media -->
                            <Grid Grid.Row="0" Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="TranscriptFileLabel" Grid.Column="0"
                                           Text="Select a transcript file to view" 
                                           FontSize="12" Foreground="{StaticResource TextDimBrush}"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="NoWrap" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                <Button x:Name="OpenMediaBtn" Grid.Column="1"
                                        Content="ðŸ“‚ Open Media File" 
                                        Style="{StaticResource AccentButton}"
                                        Click="OpenMediaBtn_Click"
                                        Visibility="Collapsed" FontSize="11" Padding="10,4"/>
                                <Button x:Name="OpenInExplorerBtn" Grid.Column="2"
                                        Content="ðŸ“‚ Open Folder" 
                                        Style="{StaticResource AccentButton}"
                                        Click="OpenInExplorerBtn_Click"
                                        Visibility="Collapsed" FontSize="11" Padding="10,4" Margin="4,0,0,0"/>
                            </Grid>
                            <!-- Re-transcribe controls -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,6"
                                        x:Name="RetranscribePanel" Visibility="Collapsed">
                                <TextBlock Text="Model:" Foreground="{StaticResource TextDimBrush}" 
                                           FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <ComboBox x:Name="ModelSelector" Width="160" FontSize="11"
                                          Background="#1A1A2A" Foreground="{StaticResource TextBrush}"
                                          BorderBrush="{StaticResource BorderBrush}" SelectedIndex="10">
                                    <ComboBoxItem Content="tiny" Tag="tiny"/>
                                    <ComboBoxItem Content="tiny.en" Tag="tiny.en"/>
                                    <ComboBoxItem Content="base" Tag="base"/>
                                    <ComboBoxItem Content="base.en" Tag="base.en"/>
                                    <ComboBoxItem Content="small" Tag="small"/>
                                    <ComboBoxItem Content="small.en" Tag="small.en"/>
                                    <ComboBoxItem Content="medium" Tag="medium"/>
                                    <ComboBoxItem Content="medium.en" Tag="medium.en"/>
                                    <ComboBoxItem Content="large-v1" Tag="large-v1"/>
                                    <ComboBoxItem Content="large-v2" Tag="large-v2"/>
                                    <ComboBoxItem Content="large-v3" Tag="large-v3"/>
                                    <ComboBoxItem Content="turbo" Tag="turbo"/>
                                </ComboBox>
                                <Button x:Name="RetranscribeBtn" Content="ðŸ”„ Re-transcribe" 
                                        Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                        Click="RetranscribeBtn_Click" FontSize="11" Padding="10,4"/>
                                <Button x:Name="CompareBtn" Content="ðŸ“Š Compare Versions" 
                                        Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                        Click="CompareBtn_Click" FontSize="11" Padding="10,4"/>
                            </StackPanel>
                            <!-- Transcript content viewer (RichTextBox for diff highlighting) -->
                            <RichTextBox x:Name="TranscriptContentBox" Grid.Row="2" IsReadOnly="True"
                                     Background="{StaticResource SurfaceBrush}"
                                     Foreground="{StaticResource TextBrush}"
                                     BorderBrush="{StaticResource BorderBrush}"
                                     FontFamily="Cascadia Mono,Consolas,Courier New"
                                     FontSize="12" Padding="10"
                                     VerticalScrollBarVisibility="Auto"
                                     IsDocumentEnabled="True">
                                <RichTextBox.Document>
                                    <FlowDocument PageWidth="2000">
                                        <Paragraph>
                                            <Run Text="Select a transcript to view"/>
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox.Document>
                            </RichTextBox>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- ===== ANALYSIS TAB ===== -->
            <TabItem Header="ðŸ“Š Analysis">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- LLM Provider Selection -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="LLM Provider:" Foreground="{StaticResource TextDimBrush}" 
                                   FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="LlmProviderCombo" Grid.Column="1" Width="120" FontSize="11"
                                  SelectionChanged="LlmProviderCombo_SelectionChanged" SelectedIndex="0">
                            <ComboBoxItem Content="Local" Tag="local"/>
                            <ComboBoxItem Content="Gemini" Tag="gemini"/>
                            <ComboBoxItem Content="OpenAI" Tag="openai"/>
                            <ComboBoxItem Content="Claude" Tag="claude"/>
                        </ComboBox>

                        <!-- Local Model Selector (shown when Local) -->
                        <ComboBox x:Name="LocalModelCombo" Grid.Column="2" Width="220" Margin="8,0,0,0"
                                  FontSize="11" SelectedIndex="0">
                            <ComboBoxItem Content="Llama 3.1 8B (Q4)" Tag="llama-3.1-8b"/>
                            <ComboBoxItem Content="Mistral 7B v0.3 (Q4)" Tag="mistral-7b"/>
                            <ComboBoxItem Content="Phi-3 Mini (Q4)" Tag="phi-3-mini"/>
                            <ComboBoxItem Content="Qwen2 7B (Q4)" Tag="qwen2-7b"/>
                            <ComboBoxItem Content="Gemma 2 2B (Q4)" Tag="gemma-2-2b"/>
                        </ComboBox>

                        <!-- Cloud API Key (shown when Cloud) -->
                        <StackPanel x:Name="CloudApiPanel" Grid.Column="3" Orientation="Horizontal"
                                    Margin="8,0,0,0" Visibility="Collapsed">
                            <TextBlock Text="API Key:" Foreground="{StaticResource TextDimBrush}" 
                                       FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <PasswordBox x:Name="ApiKeyBox" Width="250" FontSize="11"
                                         Background="#1A1A2A" Foreground="{StaticResource TextBrush}"
                                         BorderBrush="{StaticResource BorderBrush}" Padding="6,4"/>
                            <TextBlock Text="Model:" Foreground="{StaticResource TextDimBrush}" 
                                       FontSize="12" VerticalAlignment="Center" Margin="8,0,6,0"/>
                            <TextBox x:Name="CloudModelBox" Width="180" FontSize="11"
                                     Background="#1A1A2A" Foreground="{StaticResource TextBrush}"
                                     BorderBrush="{StaticResource BorderBrush}" Padding="6,4"
                                     Text="gemini-2.0-flash"/>
                        </StackPanel>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button x:Name="SummarizeAllBtn" Content="ðŸ“ Summarize" 
                                Style="{StaticResource AccentButton}"
                                Click="SummarizeAllBtn_Click"
                                ToolTip="Summarize the selected transcript"/>
                        <Button x:Name="OutlineAllBtn" Content="ðŸ“‹ Outline" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="OutlineAllBtn_Click"
                                ToolTip="Outline the selected transcript"/>
                        <TextBlock Text="|" Foreground="{StaticResource BorderBrush}" 
                                   VerticalAlignment="Center" Margin="10,0" FontSize="16"/>
                        <Button x:Name="SummarizeBatchBtn" Content="ðŸ“ Summarize All" 
                                Style="{StaticResource AccentButton}"
                                Click="SummarizeBatchBtn_Click"
                                ToolTip="Summarize all transcript files"/>
                        <Button x:Name="OutlineBatchBtn" Content="ðŸ“‹ Outline All" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="OutlineBatchBtn_Click"
                                ToolTip="Outline all transcript files"/>
                        <CheckBox x:Name="SkipExistingSummaryCheck" Content="Skip existing summaries" 
                                  IsChecked="True" VerticalAlignment="Center" Margin="12,0,0,0"
                                  Foreground="{StaticResource TextDimBrush}" FontSize="11"/>
                        <CheckBox x:Name="SkipExistingOutlineCheck" Content="Skip existing outlines" 
                                  IsChecked="True" VerticalAlignment="Center" Margin="8,0,0,0"
                                  Foreground="{StaticResource TextDimBrush}" FontSize="11"/>
                        <Button x:Name="CancelAnalysisBtn" Content="â¹ Cancel" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="CancelAnalysisBtn_Click" IsEnabled="False"/>
                        <TextBlock x:Name="AnalysisStatusLabel" VerticalAlignment="Center"
                                   Foreground="{StaticResource TextDimBrush}" FontSize="12"
                                   Margin="12,0,0,0" Text="Select a provider and action"/>
                    </StackPanel>

                    <!-- Analysis Progress -->
                    <ProgressBar x:Name="AnalysisProgress" Grid.Row="2" Height="6" 
                                 Background="{StaticResource SurfaceBrush}" 
                                 Foreground="{StaticResource AccentBrush}" 
                                 BorderThickness="0" Value="0" Margin="0,0,0,8"/>

                    <!-- Analysis Results -->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="420" MinWidth="200"/>
                            <ColumnDefinition Width="6"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Draggable splitter -->
                        <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch"
                                      Background="{StaticResource BorderBrush}" Cursor="SizeWE"/>

                        <!-- Left: Transcript list for analysis -->
                        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" 
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Margin="8,6,8,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ðŸ“„ Transcript Files" 
                                               FontSize="12" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextBrush}" 
                                               VerticalAlignment="Center" Margin="2,0,0,0"/>
                                    <ComboBox x:Name="AnalysisSortCombo" Grid.Column="1" Width="90" FontSize="10"
                                              SelectedIndex="0" SelectionChanged="AnalysisSortCombo_Changed">
                                        <ComboBoxItem Content="Newest" Tag="date"/>
                                        <ComboBoxItem Content="Largest" Tag="size"/>
                                        <ComboBoxItem Content="Name" Tag="name"/>
                                    </ComboBox>
                                </Grid>
                                <TextBox x:Name="AnalysisFilterBox" Grid.Row="1"
                                         Background="#1A1A2A" 
                                         Foreground="{StaticResource TextBrush}"
                                         BorderBrush="{StaticResource BorderBrush}"
                                         FontSize="12" Padding="6,4" Margin="8,2,8,4"
                                         TextChanged="AnalysisFilterBox_TextChanged"
                                         ToolTip="Filter transcript files by name"/>
                                <ListBox x:Name="AnalysisTranscriptList" Grid.Row="2"
                                         Background="Transparent" BorderThickness="0"
                                         Foreground="{StaticResource TextBrush}"
                                         FontSize="11" Padding="4"
                                         SelectionChanged="AnalysisTranscriptList_SelectionChanged">
                                    <ListBox.ContextMenu>
                                        <ContextMenu Background="#1E1E2E" Foreground="{StaticResource TextBrush}" BorderBrush="{StaticResource BorderBrush}">
                                            <MenuItem Header="ðŸ“ Summarize" Click="AnalysisContextSummarize_Click"/>
                                            <MenuItem Header="ðŸ“‹ Outline" Click="AnalysisContextOutline_Click"/>
                                        </ContextMenu>
                                    </ListBox.ContextMenu>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="2,4">
                                                <TextBlock Text="{Binding FileName}" 
                                                           Foreground="{StaticResource TextBrush}"
                                                           FontSize="12" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding SummaryPreview}" 
                                                           Foreground="{StaticResource TextDimBrush}"
                                                           FontSize="10" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Padding" Value="6,2"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#3B3B52"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#333344"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </Grid>
                        </Border>

                        <!-- Right: Analysis output -->
                        <TextBox x:Name="AnalysisOutputBox" Grid.Column="2" IsReadOnly="True"
                                 Background="{StaticResource SurfaceBrush}"
                                 Foreground="{StaticResource TextBrush}"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 FontFamily="Cascadia Mono,Consolas,Courier New"
                                 FontSize="12" Padding="10"
                                 VerticalScrollBarVisibility="Auto"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 Text="Select transcripts and click Summarize or Outline"/>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- ===== SEMANTIC SEARCH TAB ===== -->
            <TabItem Header="ðŸ”Ž Semantic Search">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Controls -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SemanticSearchBox" Grid.Column="0"
                                 Background="{StaticResource SurfaceBrush}" 
                                 Foreground="{StaticResource TextBrush}"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 Padding="8,6" FontSize="13" VerticalContentAlignment="Center"
                                 KeyDown="SemanticSearchBox_KeyDown"
                                 ToolTip="Enter a keyword or sentence to search"/>
                        <ComboBox x:Name="SearchModeCombo" Grid.Column="1" Width="140" Margin="8,0,0,0"
                                  FontSize="11" SelectedIndex="0">
                            <ComboBoxItem Content="Exact Match" Tag="exact"/>
                            <ComboBoxItem Content="Similar Meaning" Tag="semantic"/>
                        </ComboBox>
                        <ComboBox x:Name="EmbeddingModelCombo" Grid.Column="2" Width="180" Margin="8,0,0,0"
                                  FontSize="11" SelectedIndex="0"
                                  ToolTip="Embedding model for semantic search">
                            <ComboBoxItem Content="all-MiniLM-L6-v2" Tag="all-MiniLM-L6-v2"/>
                            <ComboBoxItem Content="all-mpnet-base-v2" Tag="all-mpnet-base-v2"/>
                            <ComboBoxItem Content="gte-small" Tag="thenlper/gte-small"/>
                            <ComboBoxItem Content="Qwen3-Embedding-0.6B" Tag="Qwen/Qwen3-Embedding-0.6B"/>
                            <ComboBoxItem Content="EmbeddingGemma-300M" Tag="google/embedding-gemma-300m"/>
                        </ComboBox>
                        <Button x:Name="SemanticSearchBtn" Grid.Column="3" Content="ðŸ” Search"
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="SemanticSearchBtn_Click"/>
                    </Grid>

                    <!-- Search Status -->
                    <TextBlock x:Name="SearchStatusLabel" Grid.Row="1"
                               Foreground="{StaticResource TextDimBrush}" FontSize="11"
                               Margin="0,0,0,8" Text="Enter a search query above"/>

                    <!-- Search Results -->
                    <DataGrid x:Name="SearchResultsGrid" Grid.Row="2" AutoGenerateColumns="False"
                              IsReadOnly="True" SelectionMode="Single"
                              Background="{StaticResource SurfaceBrush}" 
                              Foreground="{StaticResource TextBrush}"
                              BorderBrush="{StaticResource BorderBrush}"
                              RowBackground="{StaticResource SurfaceBrush}"
                              AlternatingRowBackground="#252536"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                              HeadersVisibility="Column" CanUserResizeRows="False"
                              FontSize="12">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1A1A2A"/>
                                <Setter Property="Foreground" Value="{StaticResource TextDimBrush}"/>
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="200"/>
                            <DataGridTextColumn Header="Score" Binding="{Binding ScoreDisplay}" Width="80"/>
                            <DataGridTextColumn Header="Matching Content" Binding="{Binding MatchSnippet}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ===== LOG TAB ===== -->
            <TabItem Header="ðŸ“‹ Log">
                <TextBox x:Name="LogBox" IsReadOnly="True"
                         Background="{StaticResource SurfaceBrush}"
                         Foreground="{StaticResource TextDimBrush}"
                         BorderBrush="{StaticResource BorderBrush}"
                         FontFamily="Cascadia Mono,Consolas,Courier New"
                         FontSize="11" Padding="8" TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto" Margin="0,12,0,0"
                         AcceptsReturn="True"/>
            </TabItem>

            <!-- ===== SETTINGS TAB ===== -->
            <TabItem Header="âš™ Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
                <StackPanel Margin="24,20">
                    <TextBlock Text="Application Settings" FontSize="18" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,16"/>

                    <!-- SCANNER SETTINGS -->
                    <GroupBox Header="Scanner Settings" BorderBrush="{StaticResource BorderBrush}" 
                              Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,16" Padding="12">
                        <StackPanel>
                            <CheckBox x:Name="NoVadCheck" Content="No VAD (Outdoor/Noisy Mode)" 
                                      Foreground="{StaticResource TextBrush}" FontSize="13" 
                                      IsChecked="True" Margin="0,4"/>
                            <TextBlock Text="Disable Voice Activity Detection if your audio has loud background noise." 
                                       FontSize="11" Foreground="{StaticResource TextDimBrush}" Margin="24,0,0,12"/>
                            
                            <CheckBox x:Name="EnglishOnlyCheck" Content="English Only Models" 
                                      Foreground="{StaticResource TextBrush}" FontSize="13" 
                                      IsChecked="False" Click="EnglishOnlyCheck_Click" Margin="0,4"/>
                            <TextBlock Text="Show only English-optimized models in the Transcribe tab model selector." 
                                       FontSize="11" Foreground="{StaticResource TextDimBrush}" Margin="24,0,0,12"/>
                            
                            <TextBlock Text="Device (GPU / CPU)" Foreground="{StaticResource TextBrush}" FontSize="13" Margin="0,0,0,4"/>
                            <ComboBox x:Name="DeviceCombo" Width="200" HorizontalAlignment="Left"
                                      SelectionChanged="DeviceCombo_SelectionChanged">
                                <ComboBoxItem Content="Auto (GPU if available)" Tag="auto" IsSelected="True"/>
                                <ComboBoxItem Content="GPU (CUDA)" Tag="cuda"/>
                                <ComboBoxItem Content="CPU Only" Tag="cpu"/>
                            </ComboBox>
                            <TextBlock Text="GPU mode requires NVIDIA GPU with CUDA and CUDA-enabled PyTorch installed." 
                                       FontSize="11" Foreground="{StaticResource TextDimBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- SYSTEM SETTINGS -->
                    <GroupBox Header="System" BorderBrush="{StaticResource BorderBrush}" 
                              Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,16" Padding="12">
                        <StackPanel>
                            <TextBlock Text="GPU Status Refresh Rate" Foreground="{StaticResource TextBrush}" FontSize="13" Margin="0,0,0,4"/>
                            <ComboBox x:Name="GpuRefreshCombo" Width="200" HorizontalAlignment="Left"
                                      SelectionChanged="GpuRefreshCombo_SelectionChanged">
                                <ComboBoxItem Content="1 second (Fast)" Tag="1"/>
                                <ComboBoxItem Content="3 seconds (Default)" Tag="3" IsSelected="True"/>
                                <ComboBoxItem Content="5 seconds" Tag="5"/>
                                <ComboBoxItem Content="10 seconds" Tag="10"/>
                                <ComboBoxItem Content="Manual (Click to refresh)" Tag="0"/>
                            </ComboBox>
                        </StackPanel>
                    </GroupBox>

                    <!-- ENGINE PROCESS MANAGEMENT -->
                    <GroupBox Header="Engine Process" BorderBrush="{StaticResource BorderBrush}" 
                              Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,16" Padding="12">
                        <StackPanel>
                            <CheckBox x:Name="StartEngineCheck" Content="Start Engine Logic on App Launch (Requires Restart)" 
                                      IsChecked="False" Checked="StartEngineCheck_Changed" Unchecked="StartEngineCheck_Changed"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,0,0,12"/>

                            <CheckBox x:Name="SkipExistingCheck" Content="Skip existing transcript files" 
                                      IsChecked="False" Checked="SkipExistingCheck_Changed" Unchecked="SkipExistingCheck_Changed"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,0,0,12"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Status: " Foreground="{StaticResource TextDimBrush}"/>
                                <TextBlock x:Name="EngineStatusLabel" Text="Idle" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="EngineToggleBtn" Content="âš¡ Start Engine Server" Width="160" HorizontalAlignment="Left"
                                        Style="{StaticResource AccentButton}" Click="EngineToggleBtn_Click"
                                        ToolTip="Start the persistent engine server for faster scans"/>
                                        
                                <Button Content="ðŸ’€ Force Kill" Width="100" HorizontalAlignment="Left" Margin="12,0,0,0"
                                        Style="{StaticResource AccentButton}" Click="KillEngineBtn_Click"
                                        Background="#332222" Foreground="#FF6666"
                                        ToolTip="Force terminate all engine processes"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="AI Libraries (Pip)" BorderBrush="{StaticResource BorderBrush}" 
                              Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,16" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Install required AI libraries (faster-whisper, torch) if running from source/embedded python." 
                                       Foreground="{StaticResource TextDimBrush}" TextWrapping="Wrap" Margin="0,0,0,12"/>
                            
                            <Button x:Name="InstallLibsBtn" Content="ðŸ“¥ Install AI Libraries" Width="180" HorizontalAlignment="Left"
                                    Style="{StaticResource AccentButton}" Click="InstallLibsBtn_Click" Margin="0,0,0,8"/>
                            
                            <!-- Error summary (hidden until install runs) -->
                            <TextBlock x:Name="InstallErrorSummary" Foreground="#FF6666" FontSize="11" 
                                       TextWrapping="Wrap" Margin="0,0,0,8" Visibility="Collapsed"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="InstallLogBox" Grid.Column="0" Height="100" Background="#0F172A" Foreground="#94A3B8" 
                                         FontFamily="Cascadia Mono,Consolas,Courier New" FontSize="11"
                                         IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                                         TextWrapping="Wrap" Padding="8" BorderThickness="0"/>
                                <Button x:Name="PopOpenLogBtn" Grid.Column="1" Content="â¬œ" Width="28" 
                                        VerticalAlignment="Top" Margin="4,0,0,0"
                                        Style="{StaticResource AccentButton}" Click="PopOpenLogBtn_Click"
                                        ToolTip="Open log in a separate window" FontSize="12" Padding="4"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>


                    <!-- PRIVACY SETTINGS -->
                    <GroupBox Header="Privacy" BorderBrush="{StaticResource BorderBrush}" 
                              Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,16" Padding="12">
                        <StackPanel>
                            <CheckBox x:Name="AnalyticsCheck" Content="Share Anonymous Usage Data" 
                                      Foreground="{StaticResource TextBrush}" FontSize="13" 
                                      IsChecked="True" Click="AnalyticsCheck_Click" Margin="0,4"/>
                            <TextBlock Text="Help us improve by sending anonymous crash reports and usage statistics." 
                                       FontSize="11" Foreground="{StaticResource TextDimBrush}" Margin="24,0,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- ABOUT -->
                    <GroupBox Header="About" BorderBrush="{StaticResource BorderBrush}" 
                              Foreground="{StaticResource TextDimBrush}" Padding="12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Version: " Foreground="{StaticResource TextDimBrush}" FontSize="13"/>
                                <TextBlock x:Name="AppVersionLabel" Text="1.0.0" 
                                           Foreground="{StaticResource TextBrush}" FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                            <TextBlock Text="TurboScribe" 
                                       Foreground="{StaticResource TextDimBrush}" FontSize="12" Margin="0,4,0,0"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" 
                CornerRadius="4" Padding="12,6" Margin="0,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="StatusBar" Grid.Column="0" 
                           Foreground="{StaticResource TextDimBrush}" FontSize="11"
                           Text="Ready â€” Select a directory and scan for voice"/>
                <TextBlock x:Name="GpuLabel" Grid.Column="1" 
                           Foreground="{StaticResource AccentLightBrush}" FontSize="11"
                           Text="GPU: detecting..."
                           MouseLeftButtonDown="GpuLabel_MouseLeftButtonDown"
                           Cursor="Hand" ToolTip="Click to refresh GPU status"/>
            </Grid>
        </Border>
    </Grid>
</Window>

<Window x:Class="LongAudioApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TurboScribe" Height="1365" Width="1000"
        Background="{StaticResource BgBrush}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="TurboScribe" FontSize="22" FontWeight="Bold" 
                       Foreground="{StaticResource AccentLightBrush}"/>
            <TextBlock Text="Transcribe entire drives of audio and video â€” free, local and private"
                       Foreground="{StaticResource TextDimBrush}" FontSize="12" Margin="0,4,0,8"/>
            <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Tab Control -->
        <TabControl x:Name="MainTabControl" Grid.Row="1" Background="Transparent" BorderThickness="0"
                    Foreground="{StaticResource TextBrush}">



            <!-- ===== TRANSCRIBE TAB ===== -->
            <TabItem Header="ðŸ“ Transcribe">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Drive / Directory Picker -->
                    <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                            CornerRadius="8" Padding="10,8" Margin="0,0,0,8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Drive checkbox list -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="ðŸ“ Drives:" Foreground="{StaticResource TextDimBrush}" 
                                           FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <ItemsControl x:Name="DriveList">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                                <Button x:Name="RefreshDrivesBtn" Content="ðŸ”„" Width="28" Height="24"
                                        Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                        Click="RefreshDrivesBtn_Click" ToolTip="Refresh drive list"
                                        FontSize="12" Padding="2"/>
                                <TextBlock Text="|" Foreground="{StaticResource BorderBrush}" 
                                           VerticalAlignment="Center" Margin="8,0" FontSize="14"/>
                                <Button x:Name="BrowseBtn" Content="ðŸ“‚ Custom Folder" 
                                        Style="{StaticResource AccentButton}"
                                        Click="BrowseBtn_Click" FontSize="11" Padding="8,2"
                                        ToolTip="Add a custom folder to scan"/>
                            </StackPanel>
                            
                            <!-- Hidden: stores the active directory path for compatibility -->
                            <TextBox x:Name="DirectoryBox" Grid.Row="1" Visibility="Collapsed"
                                     Text="C:\Users\k2\My Drive (dpark.sports@gmail.com)"/>
                        </Grid>
                    </Border>

                    <!-- Transcribe Controls -->
                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                            CornerRadius="8" Padding="10,8" Margin="0,0,0,8">
                        <StackPanel>
                            <!-- Transcribe group -->
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="TranscribeAllBtn" Content="â–¶ Transcribe All Files" 
                                        Style="{StaticResource AccentButton}"
                                        Click="TranscribeAllBtn_Click"
                                        ToolTip="Transcribe every media file in the directory"/>
                                <TextBlock Text="Whisper Model:" Foreground="{StaticResource TextDimBrush}" 
                                           FontSize="11" VerticalAlignment="Center" Margin="10,0,4,0"/>
                                <ComboBox x:Name="WhisperModelCombo" Width="130" FontSize="10"
                                          SelectedIndex="8"
                                          ToolTip="Whisper model used for batch transcription">
                                    <ComboBoxItem Content="tiny" Tag="tiny"/>
                                    <ComboBoxItem Content="tiny.en" Tag="tiny.en"/>
                                    <ComboBoxItem Content="base" Tag="base"/>
                                    <ComboBoxItem Content="base.en" Tag="base.en"/>
                                    <ComboBoxItem Content="small" Tag="small"/>
                                    <ComboBoxItem Content="small.en" Tag="small.en"/>
                                    <ComboBoxItem Content="medium" Tag="medium"/>
                                    <ComboBoxItem Content="medium.en" Tag="medium.en"/>
                                    <ComboBoxItem Content="large-v1" Tag="large-v1"/>
                                    <ComboBoxItem Content="large-v2" Tag="large-v2"/>
                                    <ComboBoxItem Content="large-v3" Tag="large-v3"/>
                                    <ComboBoxItem Content="turbo" Tag="turbo"/>
                                </ComboBox>
                                <CheckBox x:Name="SkipExistingCheck" Content="Skip existing" 
                                          VerticalAlignment="Center" Margin="10,0,0,0"
                                          Foreground="{StaticResource TextDimBrush}" FontSize="11"
                                          Checked="SkipExistingCheck_Changed" Unchecked="SkipExistingCheck_Changed"
                                          ToolTip="Skip media files that already have a transcript"/>
                                <Button x:Name="CancelTranscribeBtn" Content="â¹ Cancel" 
                                        Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                        Click="CancelBtn_Click" IsEnabled="False"/>
                            </StackPanel>
                            <!-- Find Meetings group -->
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                <Button x:Name="FindMeetingsBtn" Content="ðŸ” Scan for Voice" 
                                        Style="{StaticResource AccentButton}"
                                        Click="FindMeetingsBtn_Click"
                                        ToolTip="Fast VAD scan to find files with voice/speech. No Whisper model needed."/>
                                <TextBlock x:Name="TranscribeCountLabel" VerticalAlignment="Center"
                                           Foreground="{StaticResource TextDimBrush}" FontSize="12"
                                           Margin="12,0,0,0" Text="Set directory and click Transcribe"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Progress -->
                    <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                            CornerRadius="8" Padding="10,8" Margin="0,0,0,8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ProgressBar x:Name="TranscribeProgress" Grid.Row="0" Height="6" 
                                         Background="{StaticResource SurfaceBrush}" 
                                         Foreground="{StaticResource SuccessBrush}" 
                                         BorderThickness="0" Value="0"/>
                            <TextBlock x:Name="TranscribeStatusLabel" Grid.Row="1" 
                                       Foreground="{StaticResource TextDimBrush}" 
                                       FontSize="11" Margin="0,4,0,0" Text="Ready"/>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="420" MinWidth="200"/>
                            <ColumnDefinition Width="6"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Draggable splitter -->
                        <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch"
                                      Background="{StaticResource BorderBrush}" Cursor="SizeWE"/>

                        <!-- Left: Media file list -->
                        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" 
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Margin="8,6,8,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ðŸŽ¬ Media Files" 
                                               FontSize="12" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextBrush}" 
                                               VerticalAlignment="Center" Margin="2,0,0,0"/>
                                    <CheckBox x:Name="CurrentFolderOnlyCheck" Grid.Column="1"
                                              Content="ðŸ“‚ Current folder" 
                                              Foreground="{StaticResource TextDimBrush}" FontSize="10"
                                              IsChecked="True" Margin="10,0,0,0"
                                              VerticalAlignment="Center"
                                              Click="CurrentFolderOnlyCheck_Click"
                                              ToolTip="When checked, only shows media files from the selected directories. Uncheck to see all previously scanned files."/>
                                    <Button Grid.Column="2" Content="ðŸ”„" FontSize="11" Padding="4,2"
                                            Style="{StaticResource AccentButton}"
                                            Click="RefreshMediaListBtn_Click"
                                            ToolTip="Refresh media file list" Margin="0,0,4,0"/>
                                    <ComboBox x:Name="TranscriptSortCombo" Grid.Column="3" Width="90" FontSize="10"
                                              SelectedIndex="0" SelectionChanged="TranscriptSortCombo_Changed">
                                        <ComboBoxItem Content="Newest" Tag="date"/>
                                        <ComboBoxItem Content="Voice âœ“" Tag="voice"/>
                                        <ComboBoxItem Content="Name" Tag="name"/>
                                    </ComboBox>
                                </Grid>
                                <!-- Filter Box -->
                                <Grid Grid.Row="1" Margin="8,2,8,4">
                                    <TextBox x:Name="TranscriptFilterBox"
                                             Background="#1A1A2A" 
                                             Foreground="{StaticResource TextBrush}"
                                             BorderBrush="{StaticResource BorderBrush}"
                                             FontSize="12" Padding="6,4"
                                             TextChanged="TranscriptFilterBox_TextChanged"
                                             ToolTip="Filter media files by name"/>
                                    <TextBlock x:Name="FilterPlaceholder" Text="ðŸ” Filter by filename..." FontSize="12" 
                                               Foreground="#555570" Padding="8,5" IsHitTestVisible="False"/>
                                </Grid>
                                <!-- Search Box -->
                                <Grid Grid.Row="2" Margin="8,0,8,4">
                                    <TextBox x:Name="SearchBox"
                                             Background="#1A1A2A" 
                                             Foreground="{StaticResource TextBrush}"
                                             BorderBrush="{StaticResource BorderBrush}"
                                             FontSize="12" Padding="6,4"
                                             KeyDown="SearchBox_KeyDown"
                                             TextChanged="SearchBox_TextChanged"
                                             ToolTip="Type and press Enter to search across all transcripts"/>
                                    <TextBlock x:Name="SearchPlaceholder" Text="ðŸ”Ž Search inside transcripts (Enter)..." FontSize="12" 
                                               Foreground="#555570" Padding="8,5" IsHitTestVisible="False"/>
                                </Grid>
                                <ListView x:Name="MediaFileList" Grid.Row="3"
                                          Background="Transparent" BorderThickness="0"
                                          Foreground="{StaticResource TextBrush}"
                                          FontSize="11"
                                          SelectionChanged="MediaFileList_SelectionChanged">
                                    <ListView.ContextMenu>
                                        <ContextMenu Background="#1E1E2E" Foreground="{StaticResource TextBrush}" BorderBrush="{StaticResource BorderBrush}">
                                            <MenuItem Header="ðŸ“ Summarize" Click="ContextSummarize_Click"/>
                                            <MenuItem Header="ðŸ“‹ Outline" Click="ContextOutline_Click"/>
                                            <Separator/>
                                            <MenuItem Header="â–¶ Open Media File in Player" Click="ContextOpenMediaPlayer_Click"/>
                                            <MenuItem Header="ðŸ“‚ Reveal in Explorer" Click="ContextRevealExplorer_Click"/>
                                        </ContextMenu>
                                    </ListView.ContextMenu>
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Width="220">
                                                <GridViewColumnHeader Content="ðŸ“ Filename" Click="MediaFileList_HeaderClick"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis"
                                                                   ToolTip="{Binding FullPath}" Foreground="{StaticResource TextBrush}"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="55">
                                                <GridViewColumnHeader Content="ðŸŽ™ï¸ Voice" Click="MediaFileList_HeaderClick" ToolTip="Speech duration detected by VAD"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding VoiceDurationLabel}" Foreground="{StaticResource TextDimBrush}"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="55">
                                                <GridViewColumnHeader Content="ðŸ“„" Click="MediaFileList_HeaderClick" ToolTip="Transcript character count"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding TranscriptLengthLabel}" Foreground="{StaticResource TextDimBrush}"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="52">
                                                <GridViewColumnHeader Content="med.en" Click="MediaFileList_HeaderClick" FontSize="9" ToolTip="medium.en"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding MediumEnIcon}" FontSize="11" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="48">
                                                <GridViewColumnHeader Content="sm.en" Click="MediaFileList_HeaderClick" FontSize="9" ToolTip="small.en"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding SmallEnIcon}" FontSize="11" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="44">
                                                <GridViewColumnHeader Content="lg-v1" Click="MediaFileList_HeaderClick" FontSize="9" ToolTip="large-v1"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding LargeV1Icon}" FontSize="11" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="44">
                                                <GridViewColumnHeader Content="lg-v2" Click="MediaFileList_HeaderClick" FontSize="9" ToolTip="large-v2"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding LargeV2Icon}" FontSize="11" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="44">
                                                <GridViewColumnHeader Content="lg-v3" Click="MediaFileList_HeaderClick" FontSize="9" ToolTip="large-v3"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding LargeV3Icon}" FontSize="11" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="42">
                                                <GridViewColumnHeader Content="turbo" Click="MediaFileList_HeaderClick" FontSize="9" ToolTip="turbo"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding TurboIcon}" FontSize="11" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="48">
                                                <GridViewColumnHeader Content="med" Click="MediaFileList_HeaderClick" FontSize="9" ToolTip="medium"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding MediumIcon}" FontSize="11" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="42">
                                                <GridViewColumnHeader Content="small" Click="MediaFileList_HeaderClick" FontSize="9" ToolTip="small"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding SmallIcon}" FontSize="11" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="48">
                                                <GridViewColumnHeader Content="bs.en" Click="MediaFileList_HeaderClick" FontSize="9" ToolTip="base.en"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding BaseEnIcon}" FontSize="11" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="38">
                                                <GridViewColumnHeader Content="base" Click="MediaFileList_HeaderClick" FontSize="9" ToolTip="base"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding BaseIcon}" FontSize="11" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="44">
                                                <GridViewColumnHeader Content="ty.en" Click="MediaFileList_HeaderClick" FontSize="9" ToolTip="tiny.en"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding TinyEnIcon}" FontSize="11" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="38">
                                                <GridViewColumnHeader Content="tiny" Click="MediaFileList_HeaderClick" FontSize="9" ToolTip="tiny"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding TinyIcon}" FontSize="11" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>

                                        </GridView>
                                    </ListView.View>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Padding" Value="2,1"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#3B3B52"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#333344"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                                <!-- Row 4: Untranscribed toggle -->
                                <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="8,4,8,2">
                                    <CheckBox x:Name="ShowUntranscribedCheck" 
                                              Content="ðŸ“‹ Untranscribed files" 
                                              Foreground="{StaticResource TextDimBrush}" FontSize="11"
                                              IsChecked="False"
                                              Click="ShowUntranscribedCheck_Click"
                                              ToolTip="Show/hide files without transcripts"/>
                                    <TextBlock x:Name="UntranscribedCountLabel" 
                                               Foreground="{StaticResource TextDimBrush}" FontSize="10"
                                               VerticalAlignment="Center" Margin="6,0,0,0"/>
                                </StackPanel>
                                <!-- Row 5: Untranscribed list -->
                                <ListView x:Name="UntranscribedFileList" Grid.Row="5"
                                          Background="Transparent" BorderThickness="0"
                                          Foreground="{StaticResource TextBrush}"
                                          FontSize="11" MaxHeight="150"
                                          Visibility="Collapsed"
                                          SelectionChanged="MediaFileList_SelectionChanged">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Width="220">
                                                <GridViewColumnHeader Content="ðŸ“ Filename"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis"
                                                                   ToolTip="{Binding FullPath}" Foreground="{StaticResource TextDimBrush}"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="55">
                                                <GridViewColumnHeader Content="ðŸŽ™ï¸ Voice" ToolTip="Speech duration detected by VAD"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding VoiceDurationLabel}" Foreground="{StaticResource TextDimBrush}"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Padding" Value="2,1"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextDimBrush}"/>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                            </Grid>
                        </Border>

                        <!-- Right: Unified content pane -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="160"/>
                            </Grid.RowDefinitions>

                            <!-- Row 0: File info + actions -->
                            <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                    CornerRadius="8" Padding="10,6" Margin="0,0,0,4">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <!-- File path -->
                                    <Grid Grid.Row="0" Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="TranscriptFileLabel" Grid.Column="0"
                                                   Text="Select a transcript file to view" 
                                                   FontSize="12" Foreground="{StaticResource TextDimBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   TextWrapping="NoWrap" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                        <Button x:Name="OpenMediaBtn" Grid.Column="1"
                                                Content="ðŸ“‚ Open Media" 
                                                Style="{StaticResource AccentButton}"
                                                Click="OpenMediaBtn_Click"
                                                Visibility="Collapsed" FontSize="10" Padding="8,3"/>
                                        <Button x:Name="OpenInExplorerBtn" Grid.Column="2"
                                                Content="ðŸ“‚ Transcript Folder" 
                                                Style="{StaticResource AccentButton}"
                                                Click="OpenInExplorerBtn_Click"
                                                Visibility="Collapsed" FontSize="10" Padding="8,3" Margin="4,0,0,0"/>
                                    </Grid>

                                    <!-- Action bar -->
                                    <WrapPanel Grid.Row="1" Margin="0,0,0,4">
                                        <Button x:Name="InlineSummarizeBtn" Content="ðŸ“ Summarize"
                                                Style="{StaticResource AccentButton}" FontSize="10" Padding="8,3"
                                                Click="InlineSummarizeBtn_Click" IsEnabled="False"/>
                                        <Button x:Name="InlineOutlineBtn" Content="ðŸ“‹ Outline"
                                                Style="{StaticResource AccentButton}" FontSize="10" Padding="8,3"
                                                Margin="4,0,0,0" Click="InlineOutlineBtn_Click" IsEnabled="False"/>
                                        <Button x:Name="SaveAnalysisBtn" Content="ðŸ’¾ Save"
                                                Style="{StaticResource AccentButton}" FontSize="10" Padding="8,3"
                                                Margin="4,0,0,0" Click="SaveAnalysisBtn_Click" IsEnabled="False"
                                                ToolTip="Save summary/outline to file"/>
                                        <Button x:Name="RetranscribeBtn" Content="ðŸ”„ Re-transcribe"
                                                Style="{StaticResource AccentButton}" FontSize="10" Padding="8,3"
                                                Margin="4,0,0,0" Click="RetranscribeBtn_Click" IsEnabled="False"/>
                                        <Button x:Name="CompareBtn" Content="ðŸ“Š Compare"
                                                Style="{StaticResource AccentButton}" FontSize="10" Padding="8,3"
                                                Margin="4,0,0,0" Click="CompareBtn_Click" IsEnabled="False"
                                                Visibility="Collapsed"/>
                                    </WrapPanel>

                                    <!-- Model / Version selector -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal"
                                                x:Name="RetranscribePanel" Visibility="Collapsed">
                                        <TextBlock Text="Model:" Foreground="{StaticResource TextDimBrush}" 
                                                   FontSize="11" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <ComboBox x:Name="ModelSelector" Width="120" FontSize="10"
                                                  Background="#1A1A2A" Foreground="{StaticResource TextBrush}"
                                                  BorderBrush="{StaticResource BorderBrush}" SelectedIndex="10"
                                                  SelectionChanged="ModelSelector_SelectionChanged">
                                            <ComboBoxItem Content="tiny" Tag="tiny"/>
                                            <ComboBoxItem Content="tiny.en" Tag="tiny.en"/>
                                            <ComboBoxItem Content="base" Tag="base"/>
                                            <ComboBoxItem Content="base.en" Tag="base.en"/>
                                            <ComboBoxItem Content="small" Tag="small"/>
                                            <ComboBoxItem Content="small.en" Tag="small.en"/>
                                            <ComboBoxItem Content="medium" Tag="medium"/>
                                            <ComboBoxItem Content="medium.en" Tag="medium.en"/>
                                            <ComboBoxItem Content="large-v1" Tag="large-v1"/>
                                            <ComboBoxItem Content="large-v2" Tag="large-v2"/>
                                            <ComboBoxItem Content="large-v3" Tag="large-v3"/>
                                            <ComboBoxItem Content="turbo" Tag="turbo"/>
                                        </ComboBox>
                                        <CheckBox x:Name="InlineEnglishOnlyCheck" Content="English Only"
                                                  VerticalAlignment="Center" Margin="8,0,0,0"
                                                  Foreground="{StaticResource TextDimBrush}" FontSize="10"
                                                  Click="InlineEnglishOnlyCheck_Click"/>
                                        <TextBlock x:Name="InlineVersionLabel" VerticalAlignment="Center"
                                                   Foreground="{StaticResource TextDimBrush}" FontSize="10"
                                                   Margin="12,0,4,0"/>
                                        <ComboBox x:Name="VersionCombo" Width="120" FontSize="10"
                                                  Visibility="Collapsed"
                                                  SelectionChanged="VersionCombo_SelectionChanged"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Row 3: Clickable transcript lines -->
                            <ListBox x:Name="TranscriptLineList" Grid.Row="3"
                                     Background="{StaticResource SurfaceBrush}"
                                     BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                     Foreground="{StaticResource TextBrush}"
                                     FontFamily="Cascadia Mono,Consolas,Courier New"
                                     FontSize="11" Padding="4"
                                     SelectionChanged="TranscriptLineList_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="{Binding TimeLabel, Mode=OneWay}" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold"/>
                                            <Run Text=" "/>
                                            <Run Text="{Binding Text, Mode=OneWay}" Foreground="{StaticResource TextBrush}"/>
                                        </TextBlock>
                                    </DataTemplate>

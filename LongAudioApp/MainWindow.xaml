<Window x:Class="LongAudioApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TurboScribe Private" Height="700" Width="1000"
        Background="{StaticResource BgBrush}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="ðŸŽ™ï¸ TurboScribe Private" FontSize="22" FontWeight="Bold" 
                       Foreground="{StaticResource TextBrush}"/>
            <TextBlock Text="Scan media files for voice activity, then transcribe with Whisper Large-v3"
                       Foreground="{StaticResource TextDimBrush}" FontSize="12" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0"
                    Foreground="{StaticResource TextBrush}">

            <!-- ===== SCAN TAB ===== -->
            <TabItem Header="ðŸ” Scan">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Directory Picker -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="DirectoryBox" Grid.Column="0"
                                 Text="C:\Users\k2\My Drive (dpark.sports@gmail.com)"
                                 Background="{StaticResource SurfaceBrush}" 
                                 Foreground="{StaticResource TextBrush}"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 Padding="8,6" FontSize="13" VerticalContentAlignment="Center"/>
                        <Button x:Name="BrowseBtn" Grid.Column="1" Content="Browse" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="BrowseBtn_Click"/>
                        <!-- Checkbox moved to Settings tab -->
                    </Grid>

                    <!-- Scan Controls -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button x:Name="ScanBtn" Content="â–¶ Scan for Voice" 
                                Style="{StaticResource AccentButton}" Click="ScanBtn_Click"/>
                        <Button x:Name="CancelScanBtn" Content="â¹ Cancel" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="CancelBtn_Click" IsEnabled="False"/>
                        <Button x:Name="ViewLogBtn" Content="ðŸ“‹ View Log" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="ViewLogBtn_Click"/>
                        <Button x:Name="LoadResultsBtn" Content="ðŸ“‚ Load Existing Results" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="LoadResultsBtn_Click"/>
                    </StackPanel>

                    <!-- Progress -->
                    <Grid Grid.Row="2" Margin="0,0,0,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ProgressBar x:Name="ScanProgress" Grid.Row="0" Height="6" 
                                     Background="{StaticResource SurfaceBrush}" 
                                     Foreground="{StaticResource AccentBrush}" 
                                     BorderThickness="0" Value="0"/>
                        <TextBlock x:Name="ScanStatusLabel" Grid.Row="1" 
                                   Foreground="{StaticResource TextDimBrush}" 
                                   FontSize="11" Margin="0,4,0,0" Text="Ready"/>
                    </Grid>

                    <!-- Results DataGrid -->
                    <DataGrid x:Name="ResultsGrid" Grid.Row="3" AutoGenerateColumns="False"
                              IsReadOnly="True" SelectionMode="Single"
                              Background="{StaticResource SurfaceBrush}" 
                              Foreground="{StaticResource TextBrush}"
                              BorderBrush="{StaticResource BorderBrush}"
                              RowBackground="{StaticResource SurfaceBrush}"
                              AlternatingRowBackground="#252536"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                              HeadersVisibility="Column" CanUserResizeRows="False"
                              FontSize="12">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1A1A2A"/>
                                <Setter Property="Foreground" Value="{StaticResource TextDimBrush}"/>
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="60"/>
                            <DataGridTextColumn Header="Folder" Binding="{Binding FolderName}" Width="140"/>
                            <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*"/>
                            <DataGridTextColumn Header="Duration" Binding="{Binding DurationDisplay}" Width="70"/>
                            <DataGridTextColumn Header="Segments" Binding="{Binding SegmentsFound}" Width="70"/>
                            <DataGridTextColumn Header="Voice Blocks" Binding="{Binding BlocksSummary}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ===== TRANSCRIBE TAB ===== -->
            <TabItem Header="ðŸ“ Transcribe">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Transcribe Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button x:Name="BatchTranscribeBtn" Content="â–¶ Transcribe Voice Only" 
                                Style="{StaticResource AccentButton}" Click="BatchTranscribeBtn_Click"
                                ToolTip="Transcribe only detected voice segments (requires scan first)"/>
                        <Button x:Name="TranscribeAllBtn" Content="â–¶ Transcribe All Files" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="TranscribeAllBtn_Click"
                                ToolTip="Transcribe every media file in the directory (no scan needed)"/>
                        <Button x:Name="CancelTranscribeBtn" Content="â¹ Cancel" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="CancelBtn_Click" IsEnabled="False"/>
                        <Button x:Name="RefreshTranscriptsBtn" Content="ðŸ”„ Refresh" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="RefreshTranscriptsBtn_Click"/>
                        <Button x:Name="ViewSilentBtn" Content="ðŸ”‡ View Silent Files" 
                                Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                Click="ViewSilentBtn_Click" IsEnabled="False"/>
                        <TextBlock x:Name="TranscribeCountLabel" VerticalAlignment="Center"
                                   Foreground="{StaticResource TextDimBrush}" FontSize="12"
                                   Margin="12,0,0,0" Text="Load scan results first"/>
                    </StackPanel>

                    <!-- Progress -->
                    <Grid Grid.Row="1" Margin="0,0,0,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ProgressBar x:Name="TranscribeProgress" Grid.Row="0" Height="6" 
                                     Background="{StaticResource SurfaceBrush}" 
                                     Foreground="{StaticResource SuccessBrush}" 
                                     BorderThickness="0" Value="0"/>
                        <TextBlock x:Name="TranscribeStatusLabel" Grid.Row="1" 
                                   Foreground="{StaticResource TextDimBrush}" 
                                   FontSize="11" Margin="0,4,0,0" Text="Ready"/>
                    </Grid>

                    <!-- Split: Transcript List + Content Viewer -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Transcript file list -->
                        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" 
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="ðŸ“„ Transcript Files" 
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}" 
                                           Margin="10,8,10,4"/>
                                <!-- Search Box -->
                                <TextBox x:Name="SearchBox" Grid.Row="1"
                                         Background="#1A1A2A" 
                                         Foreground="{StaticResource TextBrush}"
                                         BorderBrush="{StaticResource BorderBrush}"
                                         FontSize="12" Padding="6,4" Margin="8,0,8,4"
                                         KeyDown="SearchBox_KeyDown"
                                         ToolTip="Type and press Enter to search across all transcripts"/>
                                <ListBox x:Name="TranscriptList" Grid.Row="2"
                                         Background="Transparent" BorderThickness="0"
                                         Foreground="{StaticResource TextBrush}"
                                         FontSize="11" Padding="4"
                                         SelectionChanged="TranscriptList_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="2,4">
                                                <TextBlock Text="{Binding FileName}" 
                                                           Foreground="{StaticResource TextBrush}"
                                                           FontSize="12" TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding SizeLabel}" 
                                                               Foreground="#7C3AED"
                                                               FontSize="10" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding FolderPath}" 
                                                               Foreground="{StaticResource TextDimBrush}"
                                                               FontSize="10" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Padding" Value="6,2"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#3B3B52"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#333344"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </Grid>
                        </Border>

                        <!-- Right: Transcript content -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- File info + Open Folder -->
                            <Grid Grid.Row="0" Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="TranscriptFileLabel" Grid.Column="0"
                                           Text="Select a transcript file to view" 
                                           FontSize="12" Foreground="{StaticResource TextDimBrush}"
                                           TextTrimming="CharacterEllipsis"/>
                                <Button x:Name="OpenInExplorerBtn" Grid.Column="1"
                                        Content="ðŸ“‚ Open Folder" 
                                        Style="{StaticResource AccentButton}"
                                        Click="OpenInExplorerBtn_Click"
                                        Visibility="Collapsed" FontSize="11" Padding="10,4"/>
                            </Grid>
                            <!-- Re-transcribe controls -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,6"
                                        x:Name="RetranscribePanel" Visibility="Collapsed">
                                <TextBlock Text="Model:" Foreground="{StaticResource TextDimBrush}" 
                                           FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <ComboBox x:Name="ModelSelector" Width="140" FontSize="11"
                                          Background="#1A1A2A" Foreground="{StaticResource TextBrush}"
                                          BorderBrush="{StaticResource BorderBrush}" SelectedIndex="4">
                                    <ComboBoxItem Content="tiny.en"/>
                                    <ComboBoxItem Content="base.en"/>
                                    <ComboBoxItem Content="small.en"/>
                                    <ComboBoxItem Content="medium.en"/>
                                    <ComboBoxItem Content="large-v3"/>
                                </ComboBox>
                                <Button x:Name="RetranscribeBtn" Content="ðŸ”„ Re-transcribe" 
                                        Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                        Click="RetranscribeBtn_Click" FontSize="11" Padding="10,4"/>
                                <Button x:Name="CompareBtn" Content="ðŸ“Š Compare Versions" 
                                        Style="{StaticResource AccentButton}" Margin="8,0,0,0"
                                        Click="CompareBtn_Click" FontSize="11" Padding="10,4"/>
                            </StackPanel>
                            <!-- Transcript content viewer (RichTextBox for diff highlighting) -->
                            <RichTextBox x:Name="TranscriptContentBox" Grid.Row="2" IsReadOnly="True"
                                     Background="{StaticResource SurfaceBrush}"
                                     Foreground="{StaticResource TextBrush}"
                                     BorderBrush="{StaticResource BorderBrush}"
                                     FontFamily="Cascadia Mono,Consolas,Courier New"
                                     FontSize="12" Padding="10"
                                     VerticalScrollBarVisibility="Auto"
                                     IsDocumentEnabled="True">
                                <RichTextBox.Document>
                                    <FlowDocument PageWidth="2000">
                                        <Paragraph>
                                            <Run Text="Select a transcript to view"/>
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox.Document>
                            </RichTextBox>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- ===== SETTINGS TAB ===== -->
            <TabItem Header="âš™ Settings">
                <StackPanel Margin="24,20">
                    <TextBlock Text="Application Settings" FontSize="18" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,16"/>

                    <!-- SCANNER SETTINGS -->
                    <GroupBox Header="Scanner Settings" BorderBrush="{StaticResource BorderBrush}" 
                              Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,16" Padding="12">
                        <StackPanel>
                            <CheckBox x:Name="NoVadCheck" Content="No VAD (Outdoor/Noisy Mode)" 
                                      Foreground="{StaticResource TextBrush}" FontSize="13" 
                                      IsChecked="True" Margin="0,4"/>
                            <TextBlock Text="Disable Voice Activity Detection if your audio has loud background noise." 
                                       FontSize="11" Foreground="{StaticResource TextDimBrush}" Margin="24,0,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- SYSTEM SETTINGS -->
                    <GroupBox Header="System" BorderBrush="{StaticResource BorderBrush}" 
                              Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,16" Padding="12">
                        <StackPanel>
                            <TextBlock Text="GPU Status Refresh Rate" Foreground="{StaticResource TextBrush}" FontSize="13" Margin="0,0,0,4"/>
                            <ComboBox x:Name="GpuRefreshCombo" Width="200" HorizontalAlignment="Left"
                                      SelectionChanged="GpuRefreshCombo_SelectionChanged">
                                <ComboBoxItem Content="1 second (Fast)" Tag="1"/>
                                <ComboBoxItem Content="3 seconds (Default)" Tag="3" IsSelected="True"/>
                                <ComboBoxItem Content="5 seconds" Tag="5"/>
                                <ComboBoxItem Content="10 seconds" Tag="10"/>
                                <ComboBoxItem Content="Manual (Click to refresh)" Tag="0"/>
                            </ComboBox>
                        </StackPanel>
                    </GroupBox>

                    <!-- PRIVACY SETTINGS -->
                    <GroupBox Header="Privacy" BorderBrush="{StaticResource BorderBrush}" 
                              Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,16" Padding="12">
                        <StackPanel>
                            <CheckBox x:Name="AnalyticsCheck" Content="Share Anonymous Usage Data" 
                                      Foreground="{StaticResource TextBrush}" FontSize="13" 
                                      IsChecked="True" Click="AnalyticsCheck_Click" Margin="0,4"/>
                            <TextBlock Text="Help us improve by sending anonymous crash reports and usage statistics." 
                                       FontSize="11" Foreground="{StaticResource TextDimBrush}" Margin="24,0,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- ABOUT -->
                    <GroupBox Header="About" BorderBrush="{StaticResource BorderBrush}" 
                              Foreground="{StaticResource TextDimBrush}" Padding="12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Version: " Foreground="{StaticResource TextDimBrush}" FontSize="13"/>
                                <TextBlock x:Name="AppVersionLabel" Text="1.0.0" 
                                           Foreground="{StaticResource TextBrush}" FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                            <TextBlock Text="TurboScribe Private (Bundled Edition)" 
                                       Foreground="{StaticResource TextDimBrush}" FontSize="12" Margin="0,4,0,0"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>

            <!-- ===== LOG TAB ===== -->
            <TabItem Header="ðŸ“‹ Log">
                <TextBox x:Name="LogBox" IsReadOnly="True"
                         Background="{StaticResource SurfaceBrush}"
                         Foreground="{StaticResource TextDimBrush}"
                         BorderBrush="{StaticResource BorderBrush}"
                         FontFamily="Cascadia Mono,Consolas,Courier New"
                         FontSize="11" Padding="8" TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto" Margin="0,12,0,0"
                         AcceptsReturn="True"/>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" 
                CornerRadius="4" Padding="12,6" Margin="0,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="StatusBar" Grid.Column="0" 
                           Foreground="{StaticResource TextDimBrush}" FontSize="11"
                           Text="Ready â€” Select a directory and scan for voice"/>
                <TextBlock x:Name="GpuLabel" Grid.Column="1" 
                           Foreground="{StaticResource AccentLightBrush}" FontSize="11"
                           Text="GPU: detecting..."
                           MouseLeftButtonDown="GpuLabel_MouseLeftButtonDown"
                           Cursor="Hand" ToolTip="Click to refresh GPU status"/>
            </Grid>
        </Border>
    </Grid>
</Window>
